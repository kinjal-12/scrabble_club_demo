
<div class="form-group">
  <%= pf.label :player, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
   <%= pf.collection_select(:member_id, Member.all, :id, :full_name, { :prompt => 'Select Player'}, { class: 'form-control' , required: true})%>
  </div>
  <%= pf.error_span(:player) %>
</div>
<div class="form-group">
  <%= pf.label :score, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
   <%= pf.number_field :score, class: 'form-control' %>
  </div>
  <%= pf.error_span(:score) %>
</div>