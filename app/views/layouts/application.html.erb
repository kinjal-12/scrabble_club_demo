<!DOCTYPE html>
<html>
  <head>
    <title>ScrabbleClubDemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= nav_bar brand: "ScrabbleClub", brand_link: root_path do %>
        <%= menu_group do %>
        <%= menu_item "Leader Board", root_path %>
        <%= menu_item "Members", members_path %>
        <%= menu_item "Games", games_path %>
        <% end %>
    <% end %>

    <%= yield %>

  </body>
</html>
